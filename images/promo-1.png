<svg xmlns="http://www.w3.org/2000/svg" width="600" height="300" viewBox="0 0 600 300">
  <!-- Background -->
  <rect width="600" height="300" rx="20" ry="20" fill="#FFD166" />
  
  <!-- Sun Icon -->
  <circle cx="500" cy="70" r="40" fill="#FF6B6B" />
  <circle cx="500" cy="70" r="30" fill="#FFD166" />
  
  <!-- Beach Ball -->
  <circle cx="450" cy="200" r="50" fill="#FFFFFF" />
  <path d="M450,150 A50,50 0 0,1 500,200 L450,200 Z" fill="#FF6B6B" />
  <path d="M450,150 A50,50 0 0,0 400,200 L450,200 Z" fill="#4ECDC4" />
  <path d="M450,250 A50,50 0 0,0 500,200 L450,200 Z" fill="#4ECDC4" />
  <path d="M450,250 A50,50 0 0,1 400,200 L450,200 Z" fill="#FF6B6B" />
  
  <!-- Dog with Sunglasses -->
  <g transform="translate(100, 150)">
    <!-- Dog Head -->
    <circle cx="0" cy="0" r="70" fill="#FFFFFF" />
    <circle cx="-30" cy="-20" r="10" fill="#2A363B" />
    <circle cx="30" cy="-20" r="10" fill="#2A363B" />
    
    <!-- Sunglasses -->
    <rect x="-45" y="-25" width="90" height="20" rx="5" ry="5" fill="#2A363B" />
    <rect x="-45" y="-25" width="30" height="20" rx="5" ry="5" fill="#2A363B" />
    <rect x="15" y="-25" width="30" height="20" rx="5" ry="5" fill="#2A363B" />
    
    <!-- Mouth -->
    <path d="M-20,15 Q0,35 20,15" stroke="#2A363B" stroke-width="3" fill="none" />
    
    <!-- Ears -->
    <path d="M-60,-30 Q-70,-60 -40,-50 Z" fill="#FFFFFF" />
    <path d="M60,-30 Q70,-60 40,-50 Z" fill="#FFFFFF" />
  </g>
  
  <!-- Text -->
  <text x="300" y="80" font-family="Nunito, sans-serif" font-size="40" font-weight="800" fill="#FFFFFF" text-anchor="middle" stroke="#FF6B6B" stroke-width="1">Summer Sale!</text>
  <text x="300" y="120" font-family="Poppins, sans-serif" font-size="20" font-weight="600" fill="#2A363B" text-anchor="middle">Up to 40% off on selected pet accessories</text>
  
  <!-- Button -->
  <rect x="250" y="140" width="100" height="40" rx="20" ry="20" fill="#FF6B6B" />
  <text x="300" y="165" font-family="Nunito, sans-serif" font-size="16" font-weight="700" fill="#FFFFFF" text-anchor="middle">Shop Now</text>
</svg>